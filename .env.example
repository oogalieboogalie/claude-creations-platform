# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,https://claude-creations.vercel.app

# Database (SQLite for development, can be switched to PostgreSQL for production)
DATABASE_URL=./database.db

# GitHub OAuth (optional for enhanced features)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes

# API Features
ENABLE_GITHUB_INTEGRATION=true
ENABLE_USER_REGISTRATION=true
ENABLE_PROJECT_SUBMISSION=true